<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ReferalActivity">

    <TextView
        android:id="@+id/textContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        style="?android:attr/listSeparatorTextViewStyle" />

    <TextView
        android:id="@+id/line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textContact"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DB5757" />

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME 1"
            android:textSize="30sp"/>
        
        <EditText
            android:id="@+id/referal1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/referal"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/liner1"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME 2"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/referal2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/referal"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/sendInvitation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_new"
        android:text="Send Invitation Link"
        android:textColor="#01579B"
        android:layout_below="@id/liner2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/verifyContact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_new"
        android:text="Verify Contact"
        android:layout_below="@id/sendInvitation"
        android:textColor="#01579B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/selectContact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_new"
        android:text="Select Contact"
        android:layout_below="@id/verifyContact"
        android:textColor="#01579B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="7"
        android:scrollbars="vertical"
        android:text="TextView"
        android:layout_below="@+id/selectContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/referalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-21dp"
        android:background="@drawable/box"
        android:text="REFERAL CODE : XYZ"
        android:textAlignment="center"
        android:textSize="30sp" />


</RelativeLayout>