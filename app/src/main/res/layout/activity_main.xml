<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerlayout"
    android:background="#F0EEEE">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/mode"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:background="@drawable/home_button"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/mode_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mode_icon"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODE|PRIVATE"
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_marginStart="-85dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tutorial"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:background="@drawable/home_button"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="30dp">

                <ImageView
                    android:id="@+id/tutorial_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/tutorial_icon" />

                <TextView
                    android:id="@+id/tutorial_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:maxLines="1"
                    android:text="TUTORIAL"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/safe_new"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Safe"
            android:paddingTop="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/portal"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/home_button"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/portal_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/portal_icon"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/portal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELP REQUEST"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:background="@drawable/home_button"
                android:layout_marginStart="30dp">

                <ImageView
                    android:id="@+id/info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/info_icon"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INFO"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nav_view">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>